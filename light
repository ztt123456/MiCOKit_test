<script type="text/javascript">
apiready = function(){	
	var coverFlow = api.require('coverFlow');
	var imgsData=[
		{
			url:"single.png",
			brief:"单控"
		},
		{
			url:"group.png",
			brief:"组控"
		},
		{
			url:"scene.png",
			brief:"场景"
		},
		{
			url:"all.png",
			brief:"全控"
		}	
	];
	var paths=[];
	for(var idx in imgsData){
		var imgData=imgsData[idx];
		var path="widget://image/coverFlow/"+imgData.url;
		paths.push(path);
	}
	
	coverFlow.open({
	    "x":0,
	    "y":320,
	    "width":api.frameWidth,
	    "height":api.frameHeight-300,
	    "bgColor":"widget://image/background/",
	    "paths":paths,
	    fixedOn:api.frameName
	},function(ret,err) {
		var duration=2000;
		
		if(ret.eventType == "click")
		{
			switch(ret.index)
			{
				case 0:openDevlistWin();break;
				case 1:openLightlistWin();break;
				case 2:openScenesetWin();break;
				case 3:break;
				default:break;
			}
		}
		else if(ret.eventType == "scroll")
		{
			var a = document.getElementById('lighttype_name');
			$api.text(a,imgsData[ret.index].brief); 
		}
	});
	if (api.systemType != 'ios') {
		api.addEventListener({
			name : "keyback"
		}, function(ret, err) {
			closeApp();
		});
	}
}
// 退出登录
function logout() {
	api.confirm({
		title : "请三思而行~",
		buttons : ["去意已决", "容朕想想"]
	}, function(ret, err) {
		if (ret.buttonIndex == 1) {
			// 退出登录
			//AV.User.logOut();
			window.location.href = "./login.html";
		} else {
			apiToast(GOOD_JOB, 2000);
		}
	});
}


</script>
